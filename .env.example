# ContestDraw Environment Variables Example
# Copy to .env and fill in your values

# Environment
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/contestdraw
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# AWS
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=contestdraw-dev-media
AWS_CLOUDFRONT_DOMAIN=

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Facebook API
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_API_VERSION=v18.0

# CORS
CORS_ORIGIN=http://localhost:3001

# Sentry (Error Tracking)
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email (SES or SMTP)
EMAIL_FROM=noreply@contestdraw.com
EMAIL_PROVIDER=ses

# File Upload
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=video/mp4,video/quicktime

# Session
SESSION_SECRET=your-session-secret-change-in-production

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true

# Monitoring
LOG_LEVEL=info
