# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/cleack

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration (Resend - Primary)
# Get your API key from: https://app.resend.com/settings/keys/api
RESEND_API_KEY=your-resend-api-key-here
RESEND_FROM_NAME=Cleack
RESEND_FROM_EMAIL=noreply@cleack.io

# Email Configuration (SMTP - Fallback)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@cleack.io

# OAuth2 - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/oauth/google/callback

# OAuth2 - Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/api/auth/oauth/facebook/callback

# Payment Configuration (Stripe)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Storage
STORAGE_TYPE=local
STORAGE_PATH=./uploads
MAX_FILE_SIZE=10485760

# S3-Compatible Storage (AWS S3 or Cloudflare R2)
# For Cloudflare R2:
#   S3_ENDPOINT=https://<account_id>.r2.cloudflarestorage.com
#   S3_REGION=auto
# For AWS S3:
#   S3_ENDPOINT= (leave empty)
#   S3_REGION=eu-west-1
S3_ENDPOINT=
S3_REGION=auto
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET=cleack-videos
S3_PUBLIC_URL=

# Social Media API Keys
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=
TWITTER_API_KEY=
TWITTER_API_SECRET=
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=

# YouTube Data API v3
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Enable "YouTube Data API v3" in your project
YOUTUBE_API_KEY=

# Security
BCRYPT_ROUNDS=12
COOKIE_SECRET=your-cookie-secret-key-change-in-production

# Logging
LOG_LEVEL=info
LOG_DIR=./logs
